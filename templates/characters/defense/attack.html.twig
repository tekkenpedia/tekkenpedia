<div class="{{ containerClass }}">
    <div class="card text-center">
        <div class="card-title move-card-title">
            <div class="title">{{ attack.name }}</div>
            <div class="links">
                <a href="../../../characters/{{ character.slug }}/defense/{{ attack.slug }}.html" class="text-black" title="Show only this move"><i class="bi bi-eye"></i></a>
                <i class="bi bi-link cursor-pointer" data-copy-url="characters/{{ character.slug }}/defense/{{ attack.slug }}.html" title="Copy link"></i>
            </div>
        </div>
        <br>
        <img src="../../../images/characters/{{ character.slug }}/defense/{{ attack.slug }}.gif" alt="{{ attack.name }}">
        <table class="table table-bordered table-sm mb-0">
            <tbody>
                <tr class="separator">
                    <td class="col-3">Type</td>
                    <td class="col-3">Property</td>
                    <td class="col-3">Startup frames</td>
                    <td class="col-3"></td>
                </tr>

                <tr>
                    <td>Attack</td>
                    <td>{{ attack.property|format_attack_property }}</td>
                    <td title="Startup frames">{{ attack.frames.startup|format_min_max_frames(true) }}</td>
                </tr>

                <tr class="separator separator-top">
                    <td colspan="4">On block</td>
                </tr>
                <tr class="separator separator-bottom">
                    <td>Frames</td>
                    <td></td>
                    <td>Distance</td>
                    <td></td>
                </tr>

                <tr>
                    <td class="{{ attack.frames.block|frame_bg_class }}">{{ attack.frames.block|format_frame }}</td>
                    <td></td>
                    <td>{{ attack.distances.block|format_distances }}</td>
                    <td></td>
                </tr>

                <tr class="separator separator-top">
                    <td colspan="4">On normal hit</td>
                </tr>
                <tr class="separator separator-bottom">
                    <td>Frames</td>
                    <td>Damages</td>
                    <td>Distance</td>
                    <td>Behaviors</td>
                </tr>

                <tr>
                    <td class="{{ attack.frames.normalHit|frame_bg_class }}">{{ attack.frames.normalHit|format_frame }}</td>
                    <td>{{ attack.damages.normalHit }}</td>
                    <td>{{ attack.distances.normalHit|format_distances }}</td>
                    <td>{{ attack.normalHitBehaviors|move_behaviors_icons }}</td>
                </tr>

                <tr class="separator separator-top">
                    <td colspan="4">On counter hit</td>
                </tr>
                <tr class="separator separator-bottom">
                    <td>Frames</td>
                    <td>Damages</td>
                    <td>Distance</td>
                    <td>Behaviors</td>
                </tr>

                <tr>
                    <td class="{{ attack.frames.counterHit|frame_bg_class }}">{{ attack.frames.counterHit|format_frame }}</td>
                    <td>{{ attack.damages.counterHit }}</td>
                    <td>{{ attack.distances.counterHit|format_distances }}</td>
                    <td>{{ attack.counterHitBehaviors|move_behaviors_icons }}</td>
                </tr>

                <tr class="separator">
                    <td colspan="4">Steps</td>
                </tr>

                <tr>
                    <td class="{{ attack.steps.ssl|step_bg_class }}" title="Side step left - Difficulty: {{ attack.steps.ssl|step_difficulty }}">SSL</td>
                    <td class="{{ attack.steps.swl|step_bg_class }}" title="Side walk left - Difficulty: {{ attack.steps.swl|step_difficulty }}">SWL</td>
                    <td class="{{ attack.steps.ssr|step_bg_class }}" title="Side step right - Difficulty: {{ attack.steps.ssr|step_difficulty }}">SSR</td>
                    <td class="{{ attack.steps.swr|step_bg_class }}" title="Side walk right - Difficulty: {{ attack.steps.swr|step_difficulty }}">SWR</td>
                </tr>

                {% if attack.comments.count > 0 %}
                    <tr class="separator">
                        <td colspan="4">Other information</td>
                    </tr>

                    {% include 'characters/defense/index/comments.html.twig' with {comments: attack.comments} only %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
