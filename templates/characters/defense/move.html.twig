<div class="{{ moveClass }}">
    <div class="card text-center">
        <div class="card-title move-card-title">
            <div class="title">{{ move.name }}</div>
            <div class="links">
                <a href="../../../characters/{{ character.slug }}/defense/{{ move.slug }}.html" class="text-black" title="Show only this move"><i class="bi bi-eye"></i></a>
                <i class="bi bi-link cursor-pointer" data-copy-url="characters/{{ character.slug }}/defense/{{ move.slug }}.html" title="Copy link"></i>
            </div>
        </div>
        <br>
        <img src="../../../images/characters/{{ character.slug }}/defense/{{ move.name }}.gif" alt="{{ move.name }}">
        <table class="table table-bordered table-sm mb-0">
            <tbody>
                <tr>
                    <td class="col-3" title="Move type">Attack</td>
                    <td class="col-3" title="Property">{{ move.property|format_property }}</td>
                    <td class="col-3" title="Startup frames">{{ move.frames.startup|format_frame(true) }}</td>
                </tr>

                <tr class="separator">
                    <td colspan="4">On block</td>
                </tr>

                <tr>
                    <td class="{{ move.frames.block|frame_bg_class }}" title="Frames">{{ move.frames.block|format_frame }}</td>
                    <td title="Damages">
                        0
                    </td>
                    <td title="Min distance - max distance">{{ move.distances.block|format_distances }}</td>
                </tr>

                <tr class="separator">
                    <td colspan="4">On normal hit</td>
                </tr>

                <tr>
                    <td class="{{ move.frames.normalHit|frame_bg_class }}" title="Frames">{{ move.frames.normalHit|format_frame }}</td>
                    <td title="Damage">{{ move.damages.normalHit }}</td>
                    <td title="Min distance - max distance">{{ move.distances.normalHit|format_distances }}</td>
                    <td title="Behaviors">
                        {% for behavior in move.normalHitBehaviors.toArray() %}
                            {{ behavior|move_behavior_icon }}
                        {% endfor %}
                    </td>
                </tr>

                <tr class="separator">
                    <td colspan="4">On counter hit</td>
                </tr>

                <tr>
                    <td class="{{ move.frames.counterHit|frame_bg_class }}" title="Frames">{{ move.frames.counterHit|format_frame }}</td>
                    <td title="Damages">{{ move.damages.counterHit }}</td>
                    <td title="Min distance - max distance">{{ move.distances.counterHit|format_distances }}</td>
                    <td title="Behaviors">
                        {% for behavior in move.counterHitBehaviors.toArray() %}
                            {{ behavior|move_behavior_icon }}
                        {% endfor %}
                    </td>
                </tr>

                <tr class="separator">
                    <td colspan="4">Steps</td>
                </tr>

                <tr>
                    <td class="{{ move.steps.ssl|step_bg_class }}" title="Side step left">SSL</td>
                    <td class="{{ move.steps.swl|step_bg_class }}" title="Side walk left">SWL</td>
                    <td class="{{ move.steps.ssr|step_bg_class }}" title="Side step right">SSR</td>
                    <td class="{{ move.steps.swr|step_bg_class }}" title="Side walk right">SWR</td>
                </tr>

                {% if move.comments.count > 0 %}
                    <tr class="separator">
                        <td colspan="4">Other information</td>
                    </tr>

                    {% include 'characters/defense/index/comments.html.twig' with {comments: move.comments} only %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
