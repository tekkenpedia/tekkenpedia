<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>TekkenPedia</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link href="../../styles/override.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
        <link rel="icon" type="image/png" href="../../images/favicon.png" />
    </head>
    <body>
    <div class="container">
        {% for section in sections.toArray() -%}
            {% set toggleId = characterSlug ~ '_' ~ section.slug %}
            <h1 class="cursor-pointer{% if not loop.first %} mt-4{% endif %}" data-toggle data-toggle-id="{{ toggleId }}">
                {{ section.name }}
                <i class="bi bi-toggle-on" data-toggle-icon="{{ toggleId }}"></i>
            </h1>

            <div class="row" data-toggle="{{ toggleId }}">
            {% for move in section.moves.toArray() -%}
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 mt-3">
                    <div class="card text-center">
                        <img class="card-img-top" src="../../images/characters/{{ characterSlug }}/defense/{{ move.name }}.gif" alt="{{ move.name }}">
                        <table class="table table-bordered table-sm mb-0">
                            <tbody>
                                <tr>
                                    <td class="move col-3">{{ move.name }}</td>
                                    <td class="col-3">{{ move.property|format_property }}</td>
                                    <td class="col-3" title="Attack startup frames">{{ move.frames.startup|format_frame(true) }}</td>
                                    <td class="col-3" title="Max distance from opponent">{{ (move.distance / 100)|number_format(2) }}</td>
                                </tr>
                                <tr>
                                    <td title="Damages on normal hit / Damages on counter hit">{{ move.damages.normalHit }} / {{ move.damages.counterHit }}</td>
                                    <td class="{{ move|normal_hit_bg_class }}" title="Normal hit">{{ move|format_normal_hit }}</td>
                                    <td class="{{ move|counter_hit_bg_class }}" title="Counter hit">{{ move|format_counter_hit }}</td>
                                    <td class="{{ move|block_bg_class }}" title="Block">{{ move|format_block }}</td>
                                </tr>
                                <tr>
                                    <td class="{{ move.steps.ssl|step_bg_class }}" title="Side step left">SSL</td>
                                    <td class="{{ move.steps.swl|step_bg_class }}" title="Side walk left">SWL</td>
                                    <td class="{{ move.steps.ssr|step_bg_class }}" title="Side step right">SSR</td>
                                    <td class="{{ move.steps.swr|step_bg_class }}" title="Side walk right">SWR</td>
                                </tr>
                                {% for comment in move.comments.toArray() %}
                                    {% if comment.width.value == 4 %}
                                        <tr>
                                    {% endif %}
                                        <td class="{{ comment.type|comment_type_bg_class }}" colspan="{{ comment.width.value }}">{{ comment.comment }}</td>
                                    {% if comment.width.value == 4 %}
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endfor %}
            </div>

        {% endfor -%}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="../../scripts/defense.js"></script>
    </body>
</html>
