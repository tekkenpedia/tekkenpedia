#!/usr/bin/env bash

set -eu

readonly ROOT_PATH="$(realpath "$(dirname "$(realpath "${BASH_SOURCE[0]}")")/..")"

source "${ROOT_PATH}"/bin/docker.inc.bash

docker \
    run \
        --interactive \
        --tty \
        --rm \
        --mount type=bind,source="${ROOT_PATH}",target=/app \
        --user $(id -u):$(id -g) \
        --name tekkenpedia_console \
        "${DOCKER_PHP_IMAGE_NAME}" \
        php bin/console.php \
            "${@}"
